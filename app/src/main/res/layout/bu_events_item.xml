<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_announcement"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/jade_default"
            android:gravity="bottom|right"
            android:orientation="vertical"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            tools:text="Leadership Summit | 22nd, 23rd &amp; 24th July 2022"
            android:textColor="#1b5287" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:justificationMode="inter_word"
            tools:text="IAMCP INDIA ( www.iamcpindia.org ), the Largest Independent Association of Microsoft Partners in the World, is launching “Solution Circles” Program"
            android:textColor="#2d2d2d" />


        <TextView
            android:id="@+id/tv_date_buevent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            tools:text="  Sat, 22 Jul 2022 | 10:00 AM - 11:30 AM"
            android:textAllCaps="true"
            android:textColor="#2d2d2d"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/date_time"
            tools:ignore="RtlSymmetry" />


        <TextView
            android:id="@+id/tv_buevent_place"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="  PUNE"
            android:fontFamily="@font/roboto"
            android:textAllCaps="true"
            android:textColor="#2d2d2d"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/place"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_place_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:fontFamily="@font/roboto"
            android:justificationMode="inter_word"
            android:text="Hyatt Regency Pune &amp; Residences Weikfield IT Citi Info Park, Nagar Rd, Sakore Nagar, Viman Nagar, Pune, Maharashtra"
            android:textColor="#2d2d2d" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_marginTop="12dp"
        android:background="#d9d9d9" />
</LinearLayout>