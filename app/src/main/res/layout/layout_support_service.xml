<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1b5287"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            app:srcCompat="?attr/actionModeCloseDrawable"
            app:tint="#ffffff" />

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text=" Support Services"
            android:textColor="#ffffff" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/ss_top_bg" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_bold"
                    android:justificationMode="inter_word"
                    android:textColor="#1b5287" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto"
                    android:justificationMode="inter_word"
                    android:textColor="#2d2d2d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/contact_bg"
                    android:orientation="vertical"
                    android:padding="13dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/primary_contact"
                        android:textColor="#2d2d2d" />

                    <TextView
                        android:id="@+id/tv_static_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="#2d2d2d" />

                    <TextView
                        android:id="@+id/tv_static_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:textColor="#2d2d2d" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#e6eaf4"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Know more about the Services"
                    android:textColor="#1b5287" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_jservice"
                        android:layout_width="110dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/jade_application_bg"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="jService!"
                            android:textAllCaps="true"
                            android:textColor="#1b5287"
                            android:textSize="12sp" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/jservice" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_joss"
                        android:layout_width="110dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/jade_application_bg"
                        android:gravity="center"
                        android:orientation="vertical">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Joss 2.0"
                            android:textAllCaps="true"
                            android:textColor="#1b5287"
                            android:textSize="12sp" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/jade_logo" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_zinghr"
                        android:layout_width="110dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/jade_application_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_app_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Zing HR"
                            android:textAllCaps="true"
                            android:textColor="#1b5287"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/tv_app_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/zinghr" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:gravity="center"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:id="@+id/btn_jbuzz"
                        android:layout_width="110dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/jade_application_bg"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Jbuzz 365"
                            android:textAllCaps="true"
                            android:textColor="#1b5287"
                            android:textSize="12sp" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/joss" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_mynexthire"
                        android:layout_width="110dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/jade_application_bg"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="mynexthire"
                            android:textAllCaps="true"
                            android:textColor="#1b5287"
                            android:textSize="12sp" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/mynexthire" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_Jade_university"
                        android:layout_width="110dp"
                        android:layout_height="105dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/jade_application_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Contact Us"
                            android:textAllCaps="true"
                            android:textColor="#1b5287"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/contact_us" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <!--            <com.google.android.material.tabs.TabLayout
                            android:id="@+id/sliding_tabs2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="#ffcd4e"
                            app:tabMode="scrollable"
                            app:tabSelectedTextColor="#1b5287"
                            app:tabTextAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:tabTextColor="#000000" />

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:background="@android:color/white" />-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>